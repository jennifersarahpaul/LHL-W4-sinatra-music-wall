<!-- THIS PAGE IS THE FORM TO SUBMIT A SONG -->

<% if @message.errors.any? %>
  <div>
    <strong>Some issues with your message, please fix them:</strong>
    <ul>
      <% @message.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<form method="post" action="/messages">
  <div>
    <label>Artist:</label>
    <input type="text" name="artist" value="<%= @message.artist %>">
  </div>
  <div>
    <label>Song:</label>
    <input type="text" name="song_title" value="<%= @message.song_title %>">
  </div>
  <div>
    <label>URL:</label>
    <input type="text" name="url" value="<%= @message.url %>">
  </div>
  <div>
    <input type="submit" value="Submit">
  </div>
</form>
